{
  "compilerOptions": {
    "target": "ESNext",
    "module": "nodenext",
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "rootDir": "./src/",
    "outDir": "./dist/",
    "strict": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "declaration": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "allowJs": true,
    "sourceMap": true
  },
  "files": [
    "src/index.ts",
    "src/register-commands.ts"
  ],
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
